<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="free.paper.toe.tac.tic.tictactoepaperfree.TwoPlayersFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_first"
        android:id="@+id/textViewPlayFirsTwoPlayer"
        android:textSize="@dimen/text_size"
        android:textColor="#000000"
        android:layout_marginRight="@dimen/margin_button"
        android:layout_toLeftOf="@+id/imageButtonXPlayFirstTwoPlayers"
        android:layout_alignBottom="@+id/imageButtonXPlayFirstTwoPlayers" />

    <ImageButton
        android:layout_width="@dimen/image_button_menu_size"
        android:layout_height="@dimen/image_button_menu_size"
        android:id="@+id/imageButtonXPlayFirstTwoPlayers"
        android:background="@drawable/x_menu_size"
        android:layout_marginTop="@dimen/margin_button"
        android:layout_below="@+id/imageButtonXFirstPlayWithTwoPlayers"
        android:layout_alignLeft="@+id/imageButtonXFirstPlayWithTwoPlayers"
        android:layout_alignStart="@+id/imageButtonXFirstPlayWithTwoPlayers" />

    <ImageButton
        android:layout_width="@dimen/image_button_menu_size"
        android:layout_height="@dimen/image_button_menu_size"
        android:id="@+id/imageButtonOPlayFirstTwoPlayers"
        android:background="@drawable/o_menu_size"
        android:layout_marginLeft="@dimen/margin_button"
        android:layout_alignBottom="@+id/imageButtonXPlayFirstTwoPlayers"
        android:layout_toRightOf="@+id/imageButtonXPlayFirstTwoPlayers"
        android:layout_toEndOf="@+id/imageButtonXPlayFirstTwoPlayers" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player1_play_with"
        android:lines="2"
        android:textSize="@dimen/text_size"
        android:textColor="#000000"
        android:layout_marginRight="@dimen/margin_button"
        android:id="@+id/textViewPlayWithFirstPlayerTwoPlayers"
        android:layout_toLeftOf="@+id/imageButtonXFirstPlayWithTwoPlayers"
        android:layout_centerVertical="true" />

    <ImageButton
        android:layout_width="@dimen/image_button_menu_size"
        android:layout_height="@dimen/image_button_menu_size"
        android:id="@+id/imageButtonOFirstPlayWithTwoPlayers"
        android:background="@drawable/o_menu_size"
        android:layout_marginLeft="@dimen/margin_button"
        android:layout_alignBottom="@+id/imageButtonXFirstPlayWithTwoPlayers"
        android:layout_toRightOf="@+id/imageButtonXFirstPlayWithTwoPlayers"
        android:layout_toEndOf="@+id/imageButtonXFirstPlayWithTwoPlayers"/>

    <ImageButton
        android:layout_width="@dimen/image_button_menu_size"
        android:layout_height="@dimen/image_button_menu_size"
        android:id="@+id/imageButtonXFirstPlayWithTwoPlayers"
        android:background="@drawable/x_menu_size"
        android:layout_alignBottom="@+id/textViewPlayWithFirstPlayerTwoPlayers"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <free.paper.toe.tac.tic.views.ButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_game"
        android:id="@+id/buttonStartTwoPlayers"
        android:textSize="@dimen/text_size"
        android:background="@android:color/transparent"
        android:textColor="@drawable/selector"
        android:checked="false"
        android:layout_marginTop="@dimen/margin_button"
        android:layout_below="@+id/textViewPlayFirsTwoPlayer"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player1_name"
        android:id="@+id/textViewFirstPlayerName"
        android:textSize="@dimen/text_size"
        android:textColor="#000000"
        android:layout_marginRight="@dimen/margin_button"
        android:layout_alignBottom="@+id/editTextFirstPlayerName"
        android:layout_toLeftOf="@+id/editTextFirstPlayerName"
        android:layout_toStartOf="@+id/editTextFirstPlayerName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFirstPlayerName"
        android:hint="@string/player1"
        android:ems="6"
        android:singleLine="true"
        android:layout_marginBottom="@dimen/margin_button"
        android:textSize="@dimen/text_seize_edit_text"
        android:layout_above="@+id/editTextSecondPlayerName"
        android:layout_alignLeft="@+id/editTextSecondPlayerName"
        android:layout_alignStart="@+id/editTextSecondPlayerName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player2_name"
        android:id="@+id/textViewSecondPlayerName"
        android:textSize="@dimen/text_size"
        android:textColor="#000000"
        android:layout_marginRight="@dimen/margin_button"
        android:layout_alignBottom="@+id/editTextSecondPlayerName"
        android:layout_toLeftOf="@+id/editTextSecondPlayerName"
        android:layout_toStartOf="@+id/editTextSecondPlayerName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSecondPlayerName"
        android:hint="@string/player2"
        android:ems="6"
        android:singleLine="true"
        android:layout_marginBottom="@dimen/margin_button_double"
        android:textSize="@dimen/text_seize_edit_text"
        android:layout_above="@+id/imageButtonOFirstPlayWithTwoPlayers"
        android:layout_alignLeft="@+id/imageButtonXFirstPlayWithTwoPlayers"
        android:layout_alignStart="@+id/imageButtonXFirstPlayWithTwoPlayers" />


</RelativeLayout>
