<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:padding="@dimen/standard_padding"
    android:background="@drawable/dialog_background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no text"
        android:id="@+id/editTextView"
        android:textSize="@dimen/text_size"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <free.paper.toe.tac.tic.views.ButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yes"
        android:id="@+id/yesButton"
        android:background="@android:color/transparent"
        android:textColor="@drawable/selector"
        android:onClick="yesButtonClicked"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/editTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <free.paper.toe.tac.tic.views.ButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no"
        android:id="@+id/noButton"
        android:background="@android:color/transparent"
        android:textColor="@drawable/selector"
        android:onClick="noButtonClicked"
        android:textSize="@dimen/text_size"
        android:layout_below="@id/editTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout><!-- From: file:/C:/Users/gosho/AndroidStudioProjects/TicTacToePaperFREE/app/src/main/res/layout/dialogfragment_my.xml -->