<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment">


    <free.paper.toe.tac.tic.views.ButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="two players"
        android:id="@+id/buttonTwoPlayers"
        android:textColor="@drawable/selector"
        android:textSize="@dimen/text_size"
        android:background="@android:color/transparent"
        android:layout_marginBottom="@dimen/margin_start_button"
        android:layout_marginTop="@dimen/margin_start_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <free.paper.toe.tac.tic.views.ButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="one player"
        android:id="@+id/buttonOnePlayer"
        android:textColor="@drawable/selector"
        android:textSize="@dimen/text_size"
        android:background="@android:color/transparent"
        android:layout_above="@+id/buttonTwoPlayers"
        android:layout_centerHorizontal="true" />


    <free.paper.toe.tac.tic.views.ButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="options"
        android:id="@+id/buttonOptions"
        android:textColor="@drawable/selector"
        android:textSize="@dimen/text_size"
        android:background="@android:color/transparent"
        android:layout_below="@+id/buttonTwoPlayers"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
