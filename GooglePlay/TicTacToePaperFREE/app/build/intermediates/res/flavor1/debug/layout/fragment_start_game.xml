<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="free.paper.toe.tac.tic.tictactoepaperfree.StartGameFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score_label"
        android:layout_marginBottom="@dimen/margin_game"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:id="@+id/scoreTextView"
        android:layout_gravity="center_horizontal" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boardGridView"
        android:numColumns="3"
        android:listSelector="#00000000"
        android:background="@drawable/game_board"
        android:layout_gravity="center_horizontal" />

    <free.paper.toe.tac.tic.views.ButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_game"
        android:background="@android:color/transparent"
        android:textSize="@dimen/text_size"
        android:textColor="@drawable/selector"
        android:layout_margin="@dimen/margin_game"
        android:id="@+id/newGameButton"
        android:layout_gravity="right" />
</LinearLayout><!-- From: file:/C:/Users/gosho/AndroidStudioProjects/TicTacToePaperFREE/app/src/main/res/layout/fragment_start_game.xml -->