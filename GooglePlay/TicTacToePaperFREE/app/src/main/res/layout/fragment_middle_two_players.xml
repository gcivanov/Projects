<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="free.paper.toe.tac.tic.tictactoepaperfree.MiddleTwoPlayersFragment">


    <free.paper.toe.tac.tic.views.ButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one_device"
        android:id="@+id/buttonOneDeviceTwoPlayers"
        android:textColor="@drawable/selector"
        android:textSize="@dimen/text_size"
        android:background="@android:color/transparent"
        android:layout_above="@+id/buttonOnlineTwoPlayers"
        android:layout_centerHorizontal="true" />

    <free.paper.toe.tac.tic.views.ButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/online"
        android:id="@+id/buttonOnlineTwoPlayers"
        android:textColor="@drawable/selector"
        android:textSize="@dimen/text_size"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/margin_start_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>